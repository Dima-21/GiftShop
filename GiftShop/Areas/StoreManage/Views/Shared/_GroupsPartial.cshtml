@model GroupViewModel


<table class="table table-hover ">
    <thead class="thead-light">
        <tr class="text-center">

            <th>
                @Html.DisplayNameFor(model => model.Groups[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Groups[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Groups[0].Icon)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Groups)
        {
            <tr class="text-center">
                <td hidden class="goods-id">@item.Id</td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="align-middle">
                    <img src="~/group_image/@Url.Content(item.Image)" height="40" />
                </td>
                <td class="align-middle">
                    <img src="~/group_icon/@Url.Content(item.Icon)" height="40" />
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Group" asp-route-area="StoreManage" asp-route-id="@item.Id" class="btn"><img src="~/images/icons/edit.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>